<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context="com.kllottguessing.MainActivity">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/logo"
                    android:paddingTop="15dp"
                    android:layout_gravity="center"
                    android:layout_height="100dp" />

                <TextView
                    android:id="@+id/news"
                    android:layout_width="match_parent"
                    android:background="#F00"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textSize="25dp"
                    android:textColor="#FFF"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cnt1"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#FFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/content"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#FFF"
                    />

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/date"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        />

                    <TextView
                        android:id="@+id/draw"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:gravity="center"
                        android:textSize="25sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:text="@string/all_board" />

                    <TextView
                        android:id="@+id/all_board"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        />


                    <TextView
                        android:gravity="center"
                        android:textSize="25sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:text="@string/single_board" />

                    <TextView
                        android:id="@+id/board_a"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:paddingTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/board_b"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/board_c"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:paddingBottom="10dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:gravity="center"
                        android:textSize="25sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:text="@string/three_digit" />

                    <TextView
                        android:id="@+id/three_digit"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:gravity="center"
                        android:textSize="25sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:text="@string/four_digit" />

                    <TextView
                        android:id="@+id/four_digit"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:paddingBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cnt2"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#FFF"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cnt3"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#FF0"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/logo"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    android:layout_gravity="center"
                    android:layout_height="150dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:background="@color/colorAccent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/news1"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="#FFF"
                        />
                </LinearLayout>

            </LinearLayout>



        </ScrollView>


        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id">
        </com.google.android.gms.ads.AdView>

    </android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>
